{
    "name": "devanoxltd/string-encoder",
    "type": "library",
    "description": "Facilitating the process of altering string encoding in PHP.",
    "keywords": [
        "encoding",
        "charset",
        "string"
    ],
    "homepage": "https://github.com/devanoxltd/string-encoder",
    "license": "MIT",
    "authors": [
        {
            "name": "Chetan",
            "email": "contact@mrchetan.com"
        }
    ],
    "require": {
        "php": "^8.4",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "mockery/mockery": "^1.6",
        "laravel/pint": "^1.24",
        "pestphp/pest": "^4.0"
    },
    "autoload": {
        "psr-4": {
            "StringEncoder\\": "src/StringEncoder",
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "php-version": [
            "@php -v"
        ],
        "pest": [
            "pest"
        ],
        "test": [
            "@php-version",
            "@pest"
        ],
        "lint": [
            "@php-version",
            "pint --parallel -v --test"
        ],
        "fix":  [
            "pint --parallel --repair"
        ]
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
